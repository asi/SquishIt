@using SquishIt.Framework
@using SquishIt.Framework.Minifiers.CSS
@{
    ViewBag.Title = "Minify Css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="test-container">
    <p class="red-text">This text should be red if css1 was processed.</p>
    <p class="blue-text">This text should be blue if css2 was processed.</p>
</div>

@section Styles{
    @MvcHtmlString.Create(
        Bundle.Css()
            .WithMinifier<YuiMinifier>()
            .Add("/assets/styles/minifycss_test1.css")
            .Add("/assets/styles/minifycss_test2.css")
            .ForceRelease()
            .Render("/output/minifycss-yui.css"))
}